{
  "name": "klyd-analytics-website",
  "version": "1.0.0",
  "description": "Modern SaaS website for Klyd Analytics - AI-powered ad analytics platform",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "echo 'Static site - no build process needed'",
    "deploy": "npx vercel --prod",
    "dev": "npx live-server --port=3000 --open=/index.html",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "optimize": "npx imagemin images/* --out-dir=images/optimized"
  },
  "keywords": [
    "saas",
    "analytics",
    "marketing",
    "ai",
    "roi",
    "advertising",
    "website",
    "landing-page"
  ],
  "author": "Klyd Analytics Team",
  "license": "MIT",
  "devDependencies": {
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.0.0",
    "live-server": "^1.2.2",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klyd-analytics/website.git"
  },
  "homepage": "https://klydanalytics.com",
  "dependencies": {
    "resend": "^6.2.2"
  }
}
